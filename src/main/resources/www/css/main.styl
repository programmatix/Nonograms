@require "flexbox.styl"

* {
  box-sizing: border-box
}

.squares-row {
  flexbox(flex)
  background: white
}

// Needs to sync up with particle system
$boxSize = 50px

.square-sizing {
  width: $boxSize
  height: $boxSize
  padding: 5px !important
  position: relative
}

.square {
  @extend .square-sizing
  border: 1px solid lighten(#777, 120);
  border-color: rgba(0, 0, 0, 0.2);
  border-bottom-color: lighten(#333, 70);
  //border-bottom-color: rgba(0,0,0,0.4);
  color: #fff;
  -webkit-box-shadow: inset 0 0.08em 0 rgba(255, 255, 255, 0.4), inset 0 0 0.1em rgba(255, 255, 255, 0.9);
  box-shadow: inset 0 0.08em 0 rgba(255, 255, 255, 0.4), inset 0 0 0.1em rgba(255, 255, 255, 0.9);
  cursor: pointer;
  display: inline-block;
  font: bold 100% / 2.1 "Lucida Grande", Tahoma, sans-serif;
  padding: 0 .95em 0 0;
  text-align: center;
  text-decoration: none;
  text-shadow: 0 1px 0 rgba(0, 0, 0, 0.5);
  white-space: nowrap;

  -moz-user-select: none;
  -webkit-user-select: none;
  -ms-user-select: none;
  user-select: none;

  position: relative;
  border-radius: .3em;
}

.square-untouched {
  @extends .square
  background-color: #fafcfc
}

.square-deleted {
  @extends .square
  background-color: #b6bdbd
}

.square-failure-anim {
  @extends .square
  background-color: #bd1e13
}

.square-marked {
  @extends .square
  background-color: #b7dcf4
}

.square-overlay {
  @extends .square
  background-color: #e9e9e9
  opacity: 0.4
  z-index 500
  position absolute
}

.clues-row {
  flexbox(flex)
}

.clues-clue {
  @extend .square-sizing
  font-family: 'Bangers', cursive;
  font-size 30px
  color #f8c3b9
  line-height $boxSize
  text-align center
  //background: #f6d3af
  padding 0 !important
  margin 0 !important
}

.clues-block-cols {
  flexbox(flex)
}

.board-squares-rows {
  flexbox(flex)
}

.particle {
  z-index 10000
  position: absolute
  width 10px
  height 10px
  background-color: grey
  opacity: 0.4
}

.particle-success {
  background-color: blue
  border: 1px solid darken(blue, 10)
}

.particle-delete-success {
  background-color: grey
  border: 1px solid darken(grey, 10)
}

.particle-failure {
  background-color: red
  border: 1px solid darken(red, 10)
}

.particle-solved {
  background-color: yellow
  border: 1px solid darken(yellow, 10)
}

.particle-dead {
  display: none
}

.particles-and-overlays {
  position: absolute
  top: 0
  left: 0
  pointer-events: none;
}

.particle-board {
  position: absolute
  top: 0
  left: 0
  pointer-events: none;
}

.overlay {
  pointer-events: none;

}

.view-wrapper {
  position: absolute
  top: 0
  left: 0
}

.top {
  position relative
}

.particle-settings {
  z-index 1000000
}

$count-overlay-color = orange
$count-overlay-text-color = darken(orange, 20)

.count-overlay {
  width 40px
  height 40px
  border-radius 50%
  background-color $count-overlay-color
  border 5px solid darken($count-overlay-color, 10)
  color $count-overlay-text-color
  font-weight bold
  line-height 27px
  font-size 25px
  text-align center
  z-index 500
  position absolute
}