@require "flexbox.styl"

* {
  box-sizing: border-box
}

.squares-row {
  flexbox(flex)
  background: white
}

$boxSize = 50px

.square-sizing {
  width: $boxSize
  height: $boxSize
  padding: 5px !important
}

.square {
  @extend .square-sizing
  border: 1px solid lighten(#777,120);
  border-color: rgba(0,0,0,0.2);
  border-bottom-color: lighten(#333,70);
  //border-bottom-color: rgba(0,0,0,0.4);
  color: #fff;
  -webkit-box-shadow: inset 0 0.08em 0 rgba(255,255,255,0.4), inset 0 0 0.1em rgba(255,255,255,0.9);
  box-shadow: inset 0 0.08em 0 rgba(255,255,255,0.4), inset 0 0 0.1em rgba(255,255,255,0.9);
  cursor: pointer;
  display: inline-block;
  font: bold 100%/2.1 "Lucida Grande", Tahoma, sans-serif;
  padding: 0 .95em 0 0;
  text-align: center;
  text-decoration: none;
  text-shadow: 0 1px 0 rgba(0,0,0,0.5);
  white-space: nowrap;

  -moz-user-select: none;
  -webkit-user-select: none;
  -ms-user-select: none;
  user-select: none;

  position: relative;
  border-radius: .3em;
}

.square-untouched {
  @extends .square
  background-color: #fafcfc
}

.square-deleted {
  @extends .square
  background-color: #b6bdbd
}

.square-marked {
  @extends .square
  background-color: #b7dcf4
}

.clues-row {
  flexbox(flex)
}

.clues-clue {
  @extend .square-sizing
  font-family: 'Bangers', cursive;
  font-size 30px
  color #f8c3b9
  line-height $boxSize
  text-align center
  //background: #f6d3af
  padding 0 !important
  margin 0 !important
}

.clues-block-cols {
  flexbox(flex)
}

.board-squares-rows {
  flexbox(flex)
}